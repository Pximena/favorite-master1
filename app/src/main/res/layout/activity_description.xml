<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.i044114_i012114.proyectofinalandroid.Views.DescriptionActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:padding="20dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <TextView
            android:id="@+id/id_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nombre"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/ln_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_below="@id/id_tv_name"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/id_img_imagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_tv_description"
            android:text="descripcion"
            android:textAlignment="gravity"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/ln_1"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/id_tv_cantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cantidad"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/id_tv_description"
            android:layout_margin="10dp"/>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
